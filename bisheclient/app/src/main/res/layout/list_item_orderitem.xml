<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_listview_item_orderitem_nid"
        android:text="订单项id: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="15dip"
        android:text="订单项id:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物品id: "/>
    <TextView
        android:id="@+id/tv_listview_item_orderitem_goodid"
        android:layout_marginRight="15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物品id:"/>

    <TextView
        android:text="物品数量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_listview_item_orderitem_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物品数量"/>

</LinearLayout>